<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PokeConf.App.App">
  <Application.Resources>
        <ResourceDictionary>


            
            <Color x:Key="Primary">#FF260E</Color>
            <Color x:Key="PrimaryDark">#A61407</Color> 
            <Color x:Key="Accent">#01A8DD</Color>
             <Color x:Key="ContentBackground">#222222</Color> 
            <Color x:Key="BorderBackground">#DEDEDE</Color>

            <Color x:Key="WhiteColor">#FFFFFF</Color>


            <OnPlatform x:Key="SearchBarBackgroundColor" x:TypeArguments="Color" Android="{StaticResource WhiteColor}" iOS="{StaticResource Primary}" />

            
            <Color x:Key="LightBackgroundColor">#FAFAFA</Color>
            <Color x:Key="DarkBackgroundColor">#C0C0C0</Color>
            <Color x:Key="MediumGrayTextColor">#4d4d4d</Color>
            <Color x:Key="LightTextColor">#999999</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
